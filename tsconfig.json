{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "esnext",
        "target": "esnext",
        "lib": ["es6", "dom", "ES2021"],
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "baseUrl": "./src",
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "resolveJsonModule": true
    },
    "tsLoaderOptions": {
        "useCache": false
    },
    "exclude": ["node_modules", "src/build", "**.js", "dist", "**/*.spec.ts"]
}
